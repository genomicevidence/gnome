<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "form-stacked actions" }) do |f| %>
  <%= devise_error_messages! %>

  <%= f.label :email %>
  <p><%= f.email_field :email %></p>

  <p><%= f.submit "Send me reset password instructions", :class => "btn primary" %></p>
  <%= render :partial => "devise/shared/links" %>
<% end %>

